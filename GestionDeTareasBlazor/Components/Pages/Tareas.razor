@using GestionDeTareas.Blazor.Services
@using GestionDeTareasBlazor.Models
@using GestionDeTareasBlazor.Models.Dto

@page "/tareas"
@inject TareaApiService TareaService
@rendermode InteractiveServer

<h3 class="mb-3">📋 Lista de Tareas</h3>

<EditForm Model="nuevaTarea"
          OnValidSubmit="GuardarTarea"
          FormName="crearTarea">

    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Título</label>
        <InputText class="form-control"
                   @bind-Value="nuevaTarea.Titulo" />
    </div>

    <div class="mb-3">
        <label class="form-label">Descripción</label>
        <InputText class="form-control"
                   @bind-Value="nuevaTarea.Descripcion" />
    </div>

    <div class="mb-3">
        <label class="form-label">Estado</label>
        <InputSelect class="form-select"
                     @bind-Value="nuevaTarea.Estado">
            <option value="0">Pendiente</option>
            <option value="0">Pendiente</option>
            <option value="1">En Proceso</option>
            <option value="2">Completada</option>
        </InputSelect>
    </div>

    <div class="mb-3">
        <label class="form-label">Fecha Vencimiento</label>
        <InputDate class="form-control"
                   @bind-Value="nuevaTarea.FechaVencimiento" />
    </div>

    <button type="submit" class="btn btn-primary">
        Guardar
    </button>

</EditForm>




@if (tareas == null)
{
    <p>Cargando...</p>
}
else if (!tareas.Any())
{
    <p>No hay tareas registradas.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Título</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in tareas)
            {
                <tr>
                    <td>@t.Titulo</td>
                    <td>
                        <span class="badge @GetEstadoClass(t.Estado)">
                            @GetEstadoTexto(t.Estado)
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private TareaCreateDto nuevaTarea = new();
    private List<TareaCreateDto>? tareas;

    protected override async Task OnInitializedAsync()
    {
        tareas = await TareaService.GetTareasAsync();
    }

    private string GetEstadoClass(EstadoTarea estado)
    {
        return estado switch
        {
            EstadoTarea.Pendiente => "bg-secondary",
            EstadoTarea.EnProceso => "bg-warning text-dark",
            EstadoTarea.Completada => "bg-success",
            _ => "bg-dark"
        };
    }

    private string GetEstadoTexto(EstadoTarea estado)
    {
        return estado switch
        {
            EstadoTarea.Pendiente => "Pendiente 🕒😊",
            EstadoTarea.EnProceso => "En proceso ⚙️",
            EstadoTarea.Completada => "Completada ",
            _ => "Desconocido"
        };
    }



 


    private async Task GuardarTarea()
    {
        if (string.IsNullOrWhiteSpace(nuevaTarea.Titulo))
        {
            return;
        }
        await TareaService.CreateTareaAsync(nuevaTarea);
        tareas = await TareaService.GetTareasAsync();
        nuevaTarea = new TareaCreateDto();
    }
}
